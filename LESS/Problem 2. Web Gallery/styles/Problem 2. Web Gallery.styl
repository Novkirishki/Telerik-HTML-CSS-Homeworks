body, header, nav, ul, li, a, section, img {
	margin: 0;
	padding: 0;
}

:target {
	display: inline-block !important;
}

body {

	header {

		nav {
			padding: 20px;

			ul {
				list-style-type: none;

				li {
					display: inline-block;
					margin: 5px;
					
					a {

						img {
							width: 200px;
							height: 150px;
						}
					}
				}
			}
		}
	}
	
	section {
		padding:40px;

		img.showed {
			display:none;
			width: 400px;
			height: 300px;
		}
	}
}